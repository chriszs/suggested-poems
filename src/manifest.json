{
  "manifest_version": 2,
  "name": "Suggested poems for Gmail",
  "description": "Replaces suggested replies on Gmail messages with poetic verse.",
  "version": "0.5",
  "content_scripts": [
    {
      "matches": [
        "https://mail.google.com/*"
      ],
      "js": [
        "corpus.js",
        "rita-full.min.js",
        "content.js"
      ],
      "css": [
        "content.css"
      ]
    }
  ],
  "icons": {
    "16": "icon16.png",
    "48": "icon48.png",
    "128": "icon128.png"
  }
}
